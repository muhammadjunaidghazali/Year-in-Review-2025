    <script>
        // High Contrast Data from User History (Updated for 2025 context)
        const timelineEntries = [
            { x: 50, date: "Jan 1", mood: "Optimistic", text: "I'm feeling optimistic for the year ahead.", tags: ["Wagma", "Juju"] },
            { x: 150, date: "Feb 27", mood: "Enthusiastic", text: "Meow meow! The Rector is love.", tags: ["Wagma"] },
            { x: 250, date: "Mar 17", mood: "Successful", text: "My Bugu Did it! We love you Allah.", tags: ["Wagma"] },
            { x: 350, date: "Apr 15", mood: "Productive", text: "Great piece of work done Alhumdulilah.", tags: ["Work"] },
            { x: 450, date: "May 13", mood: "Ecstatic", text: "Suggested to be the role model for undergrads.", tags: ["Work"] },
            { x: 550, date: "Jun 26", mood: "Empowered", text: "Bestowed title of 'The Gentleman of NSHS'.", tags: ["Work"] },
            { x: 600, date: "Jul 10", mood: "Accomplished", text: "Won the AI championships at NUST!", tags: ["Work"] },
            { x: 680, date: "Aug 12", mood: "Exhilarated", text: "What an amazing opportunity thank you Allah.", tags: ["Wagma", "Juju"] },
            { x: 740, date: "Aug 16", mood: "Anguished", text: "It's no use... My brain hurts.", tags: ["Fracture"] },
            { x: 780, date: "Aug 26", mood: "Tranquil", text: "Getting better step by step. Alhumdulilah first namaz.", tags: ["Recovery"] },
            { x: 820, date: "Aug 31", mood: "Ecstatic", text: "Juju arrives. The reason to stay.", tags: ["Wagma", "Juju"] },
            { x: 880, date: "Sep 6", mood: "Exhilarated", text: "Juju Aqeeqa done on 12 Rabiul Awal. Masha Allah.", tags: ["Wagma", "Juju"] },
            { x: 920, date: "Oct 15", mood: "Grateful", text: "Thank you for all the family and friends.", tags: ["Wagma", "Juju"] },
            { x: 980, date: "Dec 30", mood: "Content", text: "Iâ€™m feeling content with what we have built.", tags: ["Wagma", "Juju"] }
        ];

        const svg = document.getElementById('timeline-svg');
        const nodeLayer = document.getElementById('node-layer');
        const hud = document.getElementById('hud');
        const masterPath = document.getElementById('master-path');

        function createGrid() {
            const gridG = document.getElementById('grid');
            for(let i=0; i<=1000; i+=100) {
                const l = document.createElementNS("http://www.w3.org/2000/svg", "line");
                l.setAttribute("x1", i); l.setAttribute("y1", 0);
                l.setAttribute("x2", i); l.setAttribute("y2", 500);
                l.setAttribute("stroke", "white");
                gridG.appendChild(l);
            }
        }

        function createNodes() {
            timelineEntries.forEach((entry, idx) => {
                const point = getPathYAtX(entry.x);
                
                const circle = document.createElementNS("http://www.w3.org/2000/svg", "circle");
                circle.setAttribute("cx", entry.x);
                circle.setAttribute("cy", point.y);
                circle.setAttribute("r", "4");
                circle.setAttribute("class", "data-node");
                
                // Set color based on section
                let color = "var(--cyber-lime)";
                if (entry.x > 700) color = "var(--acid-magenta)";
                if (entry.x >= 820) color = "var(--solar-gold)";
                
                circle.setAttribute("fill", color);
                
                circle.addEventListener('mouseenter', (e) => showHUD(e, entry, color));
                circle.addEventListener('mouseleave', hideHUD);
                
                nodeLayer.appendChild(circle);
            });
        }

        function getPathYAtX(x) {
            let low = 0;
            let high = masterPath.getTotalLength();
            while (low < high - 1) {
                let mid = (low + high) / 2;
                let p = masterPath.getPointAtLength(mid);
                if (p.x < x) low = mid;
                else high = mid;
            }
            return masterPath.getPointAtLength(low);
        }

        function showHUD(e, data, color) {
            hud.style.display = 'block';
            hud.style.opacity = '1';
            hud.style.borderLeftColor = color;
            document.getElementById('hud-date').innerText = data.date;
            document.getElementById('hud-mood').innerText = data.mood;
            document.getElementById('hud-mood').style.backgroundColor = color + '44';
            document.getElementById('hud-text').innerText = `"${data.text}"`;
            
            const tagWagma = document.getElementById('tag-wagma');
            const tagJuju = document.getElementById('tag-juju');
            tagWagma.style.opacity = data.tags.includes("Wagma") ? "1" : "0.2";
            tagJuju.style.opacity = data.tags.includes("Juju") ? "1" : "0.2";

            moveHUD(e);
        }

        function moveHUD(e) {
            const x = e.clientX + 20;
            const y = e.clientY - 40;
            hud.style.transform = `translate(${x}px, ${y}px)`;
        }

        function hideHUD() {
            hud.style.opacity = '0';
            setTimeout(() => { if(hud.style.opacity === '0') hud.style.display = 'none'; }, 200);
        }

        const liveQuote = document.getElementById('live-quote');
        let quoteIdx = 0;
        function cycleQuotes() {
            liveQuote.style.opacity = 0;
            setTimeout(() => {
                liveQuote.innerText = `"${timelineEntries[quoteIdx].text}"`;
                liveQuote.style.opacity = 1;
                quoteIdx = (quoteIdx + 1) % timelineEntries.length;
            }, 500);
        }

        window.onload = () => {
            createGrid();
            
            const length = masterPath.getTotalLength();
            masterPath.style.strokeDasharray = length;
            masterPath.style.strokeDashoffset = length;
            masterPath.getBoundingClientRect();
            masterPath.style.transition = 'stroke-dashoffset 3s cubic-bezier(0.4, 0, 0.2, 1)';
            masterPath.style.strokeDashoffset = '0';
            
            setTimeout(createNodes, 1000);
            setInterval(cycleQuotes, 6000);
            
            window.addEventListener('mousemove', (e) => {
                if(hud.style.display === 'block') moveHUD(e);
            });
        };
    </script>
</body>
</html>
